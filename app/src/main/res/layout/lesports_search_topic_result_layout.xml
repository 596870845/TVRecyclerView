<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_result_content_view"
    android:layout_width="@dimen/search_result_topic_item_width"
    android:layout_height="@dimen/search_result_item_height"
    android:background="@drawable/selector_item_focus_change_bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_margin="13dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="3dp">

    <!--
      注意要空出3dp给焦点显示,否则会看不到焦点效果
     -->
    <ImageView
        android:id="@+id/iv_result_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/image" />

    <TextView
        android:id="@+id/tv_result_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/lesports_normal_title_bg"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:layerType="hardware"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="34sp" />

</RelativeLayout>

